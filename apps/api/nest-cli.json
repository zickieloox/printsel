{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "langduage": "ts",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "typeCheck": false,
    "plugins": [
      "@nestjs/swagger/plugin"
    ],
    "assets": [
      {
        "include": "./i18n/**/*",
        "watchAssets": true
      },
      {
        "include": "**/*.ejs",
        "watchAssets": true
      }
    ]
  }
}
